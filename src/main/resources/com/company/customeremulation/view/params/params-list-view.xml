<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://paramsListView.title"
      focusComponent="paramsesDataGrid">
    <data>
        <collection id="paramsesDc"
                    class="com.company.customeremulation.entity.Params">
            <fetchPlan extends="_base"/>
            <loader id="paramsesDl" readOnly="true">
                <query>
                    <![CDATA[select e from cst_Params e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="paramsesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="paramsesDataGrid.create"/>
            <button id="editButton" action="paramsesDataGrid.edit"/>
            <simplePagination id="pagination" dataLoader="paramsesDl"/>
        </hbox>
        <dataGrid id="paramsesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="paramsesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
            </actions>
            <columns resizable="true">
                <column property="maxItems"/>
                <column property="minDelay"/>
                <column property="maxDelay"/>
                <column property="fakeAddressProbability"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
