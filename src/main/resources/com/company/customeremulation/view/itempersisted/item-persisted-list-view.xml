<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://itemPersistedListView.title"
      focusComponent="itemPersistedsDataGrid">
    <data>
        <collection id="itemPersistedsDc"
                    class="com.company.customeremulation.entity.ItemPersisted">
            <fetchPlan extends="_base"/>
            <loader id="itemPersistedsDl" readOnly="true">
                <query>
                    <![CDATA[select e from cst_ItemPersisted e]]>
                </query>
            </loader>
        </collection>
        <instance id="itemPersistedDc"
                  class="com.company.customeremulation.entity.ItemPersisted">
            <fetchPlan extends="_base"/>
            <loader id="itemPersistedDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="itemPersistedsDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="itemPersistedsDataGrid.create"/>
                    <button id="editButton" action="itemPersistedsDataGrid.edit"/>
                    <button id="removeButton" action="itemPersistedsDataGrid.remove"/>
                    <simplePagination id="pagination" dataLoader="itemPersistedsDl"/>
                </hbox>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="itemPersistedDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="nameField" property="name"/>
                    <textArea id="descriptionField" height="9.5em" property="description"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
